<div class="modal fade" id="songUpload" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	 aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content stylish-color">
			@using (Ajax.BeginForm("UploadSong", "Home", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "plwrap" }, new { enctype = "multipart/form-data" }))
			{
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Upload Song</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<input class="btn btn-blue-grey" type="file" id="fileToUpload" name="file">
				</div>
				<div class="modal-footer justify-content-start">
					<button class="btn btn-light" type="submit" id="btnSubmit" value="Upload" data-toggle="modal" data-target="#songUpload">Upload</button>
				</div>
			}
		</div>
	</div>
</div>
